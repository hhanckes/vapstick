<header class="intro">
    <div class="intro-body">
        <div class="row">
            <div class="col-md-4">
                <p class="intro-text" style="vertical-align:bottom;">Detalles de tu pedido <%= image_tag 'vapstick_smoke_white.png' %></p>
            </div>
        	<div class="col-md-6">
			  <div class="row">
				<div class="col-md-12" style="text-align:left;">
			  		<p style="margin:0px 0px 10px 0px">Datos del despacho</p>
				</div>
			  </div>
				<div class="row" style="margin-bottom:10px">
					<div class="col-md-2" style="text-align:right;">
				  		Nombre:
					</div>
					<div class="col-md-10" style="text-align:left;">
				  		 <%= @order.name %>
					</div>
				</div>
				<div class="row" style="margin-bottom:10px">
					<div class="col-md-2" style="text-align:right;">
				  		Teléfono:
					</div>
					<div class="col-md-6" style="text-align:left;">
				  		 <%= @order.phone_number %>
					</div>
				</div>
				<div class="row" style="margin-bottom:10px">
					<div class="col-md-2" style="text-align:right;">
				  		Dirección:
					</div>
					<div class="col-md-6" style="text-align:left;">
				  		 <%= @order.address %> en <%= @order.shipping_area.name %>
					</div>
				</div>
			  <div class="row">
				<div class="col-md-12" style="text-align:left;">
			  		<p style="margin:20px 0px 10px 0px">Productos comprados</p>
				</div>
			  </div>
				<% @order.product_orders.each do |po| %>
				<div class="row" style="margin-bottom:10px">
					<div class="col-md-2" style="text-align:right;">
				  		<%= po.quantity %>
					</div>
					<div class="col-md-6" style="text-align:left;">
				  		 <%= po.product.name %> <%= number_to_currency po.product_price, precision: 0 %>
					</div>
				</div>
				<% end %>
				<div class="row">
				<div class="col-md-12" style="text-align:left;">
			  		<p style="margin:20px 0px 10px 0px">Precio</p>
				</div>
			  </div>
				<div class="row" style="margin-bottom:10px">
					<div class="col-md-3" style="text-align:right;">
				  		Costo despacho
					</div>
					<div class="col-md-6" style="text-align:left;">
				  		 <%= number_to_currency @order.shipping_cost, precision: 0 %>
					</div>
				</div>
				<div class="row" style="margin-bottom:10px">
					<div class="col-md-3" style="text-align:right;">
				  		Costo productos
					</div>
					<div class="col-md-6" style="text-align:left;">
				  		 <%= number_to_currency @order.product_orders.sum(:product_price), precision: 0 %>
					</div>
				</div>
				<hr />
				<div class="row" style="margin-bottom:10px">
					<div class="col-md-3" style="text-align:right;">
				  		Total
					</div>
					<div class="col-md-6" style="text-align:left;">
				  		 <%= number_to_currency @order.product_orders.sum(:product_price) + @order.shipping_cost, precision: 0 %>
					</div>
				</div>
			</div>
		</div>
    </div>
</header>
<!-- Contact Section -->
